<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".activity.MenuFragment">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/colorAccent"
        app:title="Customer Agreement"
        app:titleTextColor="@color/colorWhite"
        android:id="@+id/menu_toolbar">

    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kitchen_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@drawable/shape2"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:text="1"
            android:id="@+id/two"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_toolbar"
            android:id="@+id/kitchen_suitability"
            android:layout_marginLeft="28dp"
            android:text="Kitchen Suitability"
            android:textColor="@color/colorAccent"
            android:padding="20dp"
            android:textSize="20dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="115dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:layout_below="@id/kitchen_linear"
        android:background="@color/colorAccent">

    </View>


    <LinearLayout
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/payment_linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@drawable/shape2"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:text="2"
            android:id="@+id/four"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_toolbar"
            android:id="@+id/payment_information"
            android:layout_marginLeft="28dp"
            android:text="Payment Details"
            android:textColor="@color/colorAccent"
            android:padding="20dp"
            android:textSize="20dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="115dp"
        android:layout_marginRight="20dp"
        android:layout_height="1dp"
        android:id="@+id/view4"
        android:layout_below="@id/payment_linear"
        android:background="@color/colorAccent">

    </View>

</RelativeLayout>
