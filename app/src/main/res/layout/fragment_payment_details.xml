<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_image"
    tools:context="com.hatchers.ruralcaravane.PaymentDetails.PaymentDetailsFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#816830"
        android:id="@+id/payment_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/back_arrow"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/payment_btnBack"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_title"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text=" Payment Details "
                android:layout_marginLeft="15dp"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@id/payment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/payment_image"
        android:src="@mipmap/payment_cash"
        android:scaleType="centerCrop"/>



            <android.support.design.widget.TextInputLayout
        android:layout_below="@id/payment_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:id="@+id/payment_layout">

        <android.support.design.widget.TextInputEditText
            android:drawableLeft="@drawable/amount"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Cost Of Chullha "
            android:textColorHint="#816830"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="20dp"
            android:imeOptions="actionNext"
            android:id="@+id/payment_amount"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="18dp"
            android:padding="15dp"
            />

    </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape"
            android:id="@+id/advanceAmount_layout">

            <android.support.design.widget.TextInputEditText
                android:drawableLeft="@drawable/amount"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Advance Amount "
                android:textColorHint="#816830"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="20dp"
                android:imeOptions="actionNext"
                android:id="@+id/advance_amount"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="18dp"
                android:padding="15dp"
                />

        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:id="@+id/remainingAmount_layout">

                <android.support.design.widget.TextInputEditText
                    android:drawableLeft="@drawable/amount"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Remaining Amount "
                    android:textColorHint="#816830"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="20dp"
                    android:imeOptions="actionNext"
                    android:id="@+id/remaining_amount"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:padding="15dp"
                    />

            </android.support.design.widget.TextInputLayout>



    <ImageView
        android:src="@mipmap/receipt"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape3"
        android:id="@+id/takePhoto"/>

    <Button
        android:text="Save"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape1"
        android:id="@+id/savePayment"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
