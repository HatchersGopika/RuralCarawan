<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/construction_image"/>

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l1">


        <TextView
            android:singleLine="true"
            android:id="@+id/member_name"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Member Name"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" />


        <TextView
            android:id="@+id/age"
            android:textColor="#040404"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:text="Age"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/l1"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/l2">


        <TextView
            android:id="@+id/member_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Member Address"
            android:typeface="sans"
            android:textSize="15dip"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/construction_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="1dip"
            android:text="Mobile Number"/>
    </LinearLayout>


    <TextView
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_below="@id/l2"
        android:text="Gender"
        android:id="@+id/member_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


            <LinearLayout
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/member_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/l3">


                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Half Constructed Image"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"/>

                <ImageView
                    android:id="@+id/half_constructed_image"
                    android:src="@drawable/camera"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@+id/l3"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/member_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/l4">


                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Complete Constructed Image"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"/>

                <ImageView
                    android:id="@+id/complete_constructed_image"
                    android:src="@drawable/camera"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>


        </RelativeLayout>




    </android.support.v7.widget.CardView>
</RelativeLayout>